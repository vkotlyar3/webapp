{
  "steps": [
    {
      "id": "Clear bucket",
      "name": "gcr.io/cloud-builders/gsutil",
      "args": [
        "rm",
        "-a",
        "-r",
        "gs://$PROJECT_ID-webapp-1"
      ]
    },
    {
      "id": "Deploy to bucket",
      "name": "gcr.io/cloud-builders/gsutil",
      "args": [
        "rsync",
        "-R",
        "frontend",
        "gs://$PROJECT_ID-webapp-1/target"
      ]
    },
    {
      "id": "Make bucket public",
      "name": "gcr.io/cloud-builders/gsutil",
      "args": [
        "acl",
        "ch",
        "-u",
        "AllUsers:R",
        "gs://$PROJECT_ID-webapp-1/target/*"
      ]
    },
  ]
}